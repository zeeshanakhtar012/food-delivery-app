{
    "info": {
        "name": "NoteNest Staff API",
        "description": "API endpoints for the NoteNest Restaurant Staff App",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"staff@example.com\",\n    \"password\": \"password123\",\n    \"restaurant_id\": \"<restaurant_uuid>\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/staff/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "staff",
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Profile & Status",
            "item": [
                {
                    "name": "Get Status",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{staff_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/staff/status",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "staff",
                                "status"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{staff_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/staff/profile",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "staff",
                                "profile"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Restaurant Info",
            "item": [
                {
                    "name": "Get Menu",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{staff_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/staff/menu",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "staff",
                                "menu"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Tables",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{staff_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/staff/tables",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "staff",
                                "tables"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Orders",
            "item": [
                {
                    "name": "Create Order",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{staff_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"table_id\": \"<table_uuid>\",\n    \"guest_count\": 2,\n    \"items\": [\n        {\n            \"food_id\": \"<food_uuid>\",\n            \"quantity\": 1\n        }\n    ]\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/staff/orders",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "staff",
                                "orders"
                            ]
                        }
                    }
                },
                {
                    "name": "Add Items to Order",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{staff_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"items\": [\n        {\n            \"food_id\": \"<food_uuid>\",\n            \"quantity\": 2\n        }\n    ]\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/staff/orders/:id/add-items",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "staff",
                                "orders",
                                ":id",
                                "add-items"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "<order_uuid>"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Cancel Order",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{staff_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/staff/orders/:id/cancel",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "staff",
                                "orders",
                                ":id",
                                "cancel"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "<order_uuid>"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:5001"
        },
        {
            "key": "staff_token",
            "value": "your_jwt_token_here"
        }
    ]
}