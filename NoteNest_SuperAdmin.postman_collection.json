{
    "info": {
        "_postman_id": "super-admin-collection-v1",
        "name": "NoteNest Super Admin API",
        "description": "API collection for Super Admin management including login, restaurant management, and analytics.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Super Admin Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.token) {",
                                    "    pm.environment.set(\"super_admin_token\", jsonData.token);",
                                    "    console.log(\"Token set successfully\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"super@admin.com\",\n    \"password\": \"superpassword\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/superadmin/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "superadmin",
                                "login"
                            ]
                        },
                        "description": "Login for Super Admin to get JWT token. The token is automatically saved to the 'super_admin_token' environment variable."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Restaurants",
            "item": [
                {
                    "name": "Create Restaurant",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{super_admin_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"restaurant\": {\n        \"name\": \"Tasty Bites\",\n        \"email\": \"contact@tastybites.com\",\n        \"phone\": \"+1234567890\",\n        \"address\": \"123 Food Street, Yum City\",\n        \"logo_url\": \"https://example.com/logo.png\",\n        \"theme_color\": \"#FF5722\"\n    },\n    \"admin\": {\n        \"name\": \"John Resto\",\n        \"email\": \"admin@tastybites.com\",\n        \"password\": \"securepass123\"\n    }\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/superadmin/restaurants",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "superadmin",
                                "restaurants"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get All Restaurants",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{super_admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/superadmin/restaurants",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "superadmin",
                                "restaurants"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Restaurant Details",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{super_admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/superadmin/restaurants/:id/details",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "superadmin",
                                "restaurants",
                                ":id",
                                "details"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "REPLACE_WITH_UUID",
                                    "description": "UUID of the restaurant"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Freeze/Unfreeze Restaurant",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{super_admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/superadmin/restaurants/:id/freeze",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "superadmin",
                                "restaurants",
                                ":id",
                                "freeze"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "REPLACE_WITH_UUID"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Delete Restaurant",
                    "request": {
                        "method": "DELETE",
