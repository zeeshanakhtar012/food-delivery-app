							"host": ["{{base_url}}"],
							"path": ["api", "rider", "orders", ":id", "location"],
							"variable": [
								{
									"key": "id",
									"value": "{{order_id}}",
									"description": "Order UUID"
								}
							]
						},
						"description": "Send current location for order tracking"
					}
				}
			]
		},
